/*******************************************************************************
        => MPLABx_IDE
*******************************************************************************/



/*******************************************************************************
        => PIC16F877A_GPIO（复位后I/O状态为输入状态）
*******************************************************************************/
PORTA, PORTB, PORTC, PORTD, PORTE  //数据输出寄存器（输出0或1）
TRISA, TRISB, TRISC, TRISD, TRISE  //数据方向寄存器（1 表示输入， 0 表示输出）


//_____________________________________________________________
// 输出操作（点亮发光二极管）
//_____________________________________________________________
#include <pic.h>
#define V0      RD0             //定义V0为PORTD端口的第（0位）
int main(void)
{
        unsigned int i;
        TRISD = 0B00000000;     //设置PORTD端口全为（输出模式）
        PORTD = 0B00000000;     //设置PORTD端口全为（输出0）
        while (1) {
                for (i = 0; i < 50000; i++) {
                        V0 = !V0;
                }
        }
}


//_____________________________________________________________
// 输入操作
//_____________________________________________________________

