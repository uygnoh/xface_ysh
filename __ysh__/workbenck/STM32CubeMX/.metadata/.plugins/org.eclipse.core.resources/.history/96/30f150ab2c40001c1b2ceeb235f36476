#ifndef __COMMON_H__
#define __COMMON_H__
#include "stm32f1xx_hal.h"
#include "m32.h"

/*******************************************************************************
        => SysTic
*******************************************************************************/
void __delay_us(uint32_t nus);
void __delay_ms(uint32_t nms);

/*******************************************************************************
        => USART1
*******************************************************************************/
extern uint8_t tx_buf[] = "ERROR_CODE = 0x00\n";
extern uint8_t *pbuf    = tx_buf;
void uart_conf(uint32_t brr);
void uart_send_string(void);

#endif
