#include "common.h"
uint8_t tx_buf[20];
uint8_t *pbuf = NULL;

/*******************************************************************************
  函数名称: void uart_conf(uint32_t brr)
  输入参数: 无
  输出参数: 无
  函数功能: UART__初始化设置(1位停止位，无奇偶校验位，8位数据位)
  +_______________________________________________________________+
  |    STM32F10x__f_PCLK = 72 MHz                                 |
  |_______________________________________________________________|
  |    115200        39.0625         0%          BRR = 0x0271     |
  |    9600          468.75          0%          BRR = 0x1D4C     |
  |_______________________________________________________________|
*******************************************************************************/
void uart_conf(uint32_t brr)
{
        if (brr == 115200) {
                brr = 0x0271;
        } else {
                brr = 0x1D4C;
        }
        GPIOA_CLOCK_ENABLE();                   //打开GPIOA时钟
        USART1_CLOCK_ENABLE();                  //打开USART1时钟
	GPIOA->CRH  &= ((uint32_t)0xFFFFF00F);  //清除相关的位
	GPIOA->CRH  |= ((uint32_t)0x000000B0);  //TX(PA.09)复用推挽输出__50MHz__
	GPIOA->CRH  |= ((uint32_t)0x00000400);  //RX(PA.10)浮空输入
	USART1->CR1 |= BIT_13;                  //USART模块使能
	USART1->CR1 &= ~BIT_12;                 //1个起始位, 8个数据位
	USART1->CR2 &= ~(BIT_13 + BIT_12);      //1个停止位
	USART1->CR1 |= BIT_03 + BIT_02;         //发送使能 | 接收使能 
	USART1->BRR  = brr;                     // 72MHz@(115200 | 9600)
}
/*******************************************************************************
  函数名称: void uart_send_string(void)
  输入参数: 无
  输出参数: 无
  函数功能: 串口向上位机发送一串字符
  +_______________________________________________________________+
  |    uint8_t tx_buf[] = "ERROR_CODE = 0x00\n";                  |
  |    uint8_t *pbuf = tx_buf;                                    |
  |_______________________________________________________________|
*******************************************************************************/
void uart_send_string(void)
{

        uint16_t timeout = 50000;
        while (*pbuf != '\0') {                       //如果字符不是尾0（循环继续）
                while ((USART1->SR & BIT_07) == 0) {  //发送一个字节（数据已经传输到移位寄存器）
                        if (timeout-- == 0) {         //超时检测
                                return;
                        }
                }
                timeout     = 50000;
                USART1->DR  = *pbuf++;
        }
        while ((USART1->SR & BIT_06) == 0) {         //等待最后一个字节发送完成
                if (timeout-- == 0) {
                        return;
                }
        }
}
